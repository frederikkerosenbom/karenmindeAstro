---
import Image from "astro/components/Image.astro";
import Hours from "./Hours.astro";
import Welcome from "./Welcome.astro";
import Spis from "../img/spisSydhavnen.webp";
---

<div class="grid">
  <div class="grid1">
    <Welcome class="welcome" />
  </div>
  <div class="grid2">
    <Hours class="hours" />
  </div>
</div>
<Image src={Spis} alt="spis" class="img" />

<style>
  .grid1 {
    max-width: 80%;
    place-self: center;
  }
  .img {
    width: 100%;
    height: 150px;
    object-fit: cover;
    margin-block: 2rem;
  }
  @media (width > 1087px) {
    .grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      padding-inline: 16rem;
    }

    .grid1 {
      grid-column: 2 / 3;
      grid-row: 1 / 2;
    }

    .grid2 {
      grid-column: 1 / 2;
      grid-row: 1 / 2;
    }
    .img {
      width: 100%;
      height: 300px;
      object-fit: cover;
      margin-block: 3rem;
    }
  }
</style>
