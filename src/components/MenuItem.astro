---
interface Props {
  name: string;
  price: string;
}

const { name, price } = Astro.props;
---

<div class="menu-item">
  <span class="name">{name}</span>
  <span class="dots"></span>
  <span class="price">{price}</span>
</div>

<style>
  .menu-item {
    display: flex;
    align-items: center;
    color: white;
    font-size: 14px;
  }

  .name {
    white-space: nowrap;
  }

  .dots {
    flex: 1;
    border-bottom: 1px dotted white;
    margin: 0 8px;
  }

  .price {
    white-space: nowrap;
  }
</style>
