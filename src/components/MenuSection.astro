---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<section class="menu-section">
  <h2>{title}</h2>
  <div class="content">
    <slot />
  </div>
</section>

<style>
  .menu-section {
    margin-bottom: 50px;
  }

  h2 {
    color: white;
    font-size: 32px;
    margin-bottom: 25px;
  }

  .content {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }
</style>
